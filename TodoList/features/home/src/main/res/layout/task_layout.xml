<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/task_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/task_border"
        android:layout_margin="10dp">

        <CheckBox
            android:id="@+id/task_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/inky"
            android:height="24dp"
            android:width="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/task_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/date_text"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/task_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/date_text"
            android:backgroundTint="@color/transparent"
            android:textSize="25sp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/inky"
            android:textSize="20sp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/task_checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/edit_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                app:icon="@drawable/baseline_edit_24"
                android:contentDescription="@string/edit"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/transparent"/>

            <Button
                android:id="@+id/delete_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:icon="@drawable/baseline_delete_forever_24"
                android:contentDescription="@string/delete"
                app:layout_constraintTop_toBottomOf="@id/task_checkbox"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/edit_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/transparent"
                android:background="@color/transparent"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>